{
  "name": "roll-call",
  "version": "1.0.0",
  "description": "Mandatory 2 for class development of large systems",
  "main": "index.js",
  "scripts": {
    "test": "cross-env ENV=test jest --verbose --coverage --runInBand --forceExit",
    "start-e2e": "cross-env ENV=test node index.js",
    "start": "node index.js",
    "dev": "nodemon index.js",
    "lint": "eslint .",
    "sonar": "npx sonar-scanner"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dprzygocka/roll-call.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dprzygocka/roll-call/issues"
  },
  "homepage": "https://github.com/dprzygocka/roll-call#readme",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "eslint": "^8.17.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-jest": "^26.2.2",
    "express": "^4.17.3",
    "express-session": "^1.17.2",
    "jest": "^28.1.0",
    "jest-sonar-reporter": "^2.0.0",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^2.3.3",
    "node-fetch": "^2.6.6",
    "socket.io": "^4.5.0",
    "supertest": "^6.2.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testResultsProcessor": "jest-sonar-reporter"
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-reporter.xml",
    "indent": 4
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "printWidth": 90
  }
}
